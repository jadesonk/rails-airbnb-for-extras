<div class="card card-user mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src='<%=performer.image%>' class='card-img' alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to performer.name, performer_path(performer) %>
        </h5>
        <p class="card-text">
          <p>Gender: <%= performer.gender %></p>
          <p>Age: <%= performer.age %></p>
          <p>Height: <%= performer.physical_attributes %></p>
        </p>
 <!--        <p class="card-text"><small class="text-muted">Last updated <%= performer.updated_at %></small></p> -->
      </div>
    </div>
  </div>
</div>
