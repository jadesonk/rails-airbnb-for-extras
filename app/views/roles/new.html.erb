<div class="container pb-5 pt-5 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 pb-5">
      <h2 class="text-center">Create your role!</h2>

      <%= simple_form_for [@job, @role] do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.submit class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>

