<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 pb-5">
      <h2 class="text-center">Create your casting call!</h2>

      <%= simple_form_for @job do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :location %>
        <%= f.input :application_deadline_date %>
        <%= f.input :shoot_date %>
        <%= f.submit class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>
