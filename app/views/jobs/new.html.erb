<div class="container pb-5 pt-5 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="text-center mb-3">Create your casting call!</h2>

      <%= simple_form_for @job do |f| %>
        <%= f.input :title %>
        <%= f.input :description, as: :text %>
        <%= f.input :location %>
        <%= f.input :application_deadline_date %>
        <%= f.input :shoot_date %>
        <%= f.submit class: 'btn btn-primary btn-block mt-5' %>
      <% end %>
    </div>
  </div>
</div>
